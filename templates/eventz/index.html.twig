{% block head %}

<style>
.calendar-container
{
  justify-content: flex-start;
  margin: 100px 100px;
  max-width: 1350px; /* Maximal fünf Boxen pro Zeile mit 250px Breite */

}

.calendar-empty
{
  font-size: 50px;
  color: blueviolet;
}

.month-content
{
  flex-wrap: wrap;
  display: inline-flex;
}

.month-title
{
  margin-top: 50px;
  color: aliceblue;
  font-size: 50px;
}

.event-entry
{
  width: 250px; /* Feste Breite */
  margin: 10px; /* Abstand zwischen den Boxen */
  position: relative;
  overflow: hidden; /* Um das überstehende Bild zu verstecken */
  transition: transform 0.3s ease-in-out; /* Fügt eine sanfte Transition hinzu */
  display: block;
  border-width: 2px;
  border-color: rgb(27, 120, 133);
  border-style: solid;
}

.event-entry:hover
{
  transform: scale(1.05); /* Vergrößert die Box minimal beim Hover */
  filter: brightness(1.5);
}

.event-content
{
  position: absolute;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  width: 100%;
  padding: 10px;
  text-align: left;
  font-family: "Montserrat", sans-serif;
  font-size: 16px;
}

/* Für den Filter und Event hinzufügen Button*/

.extras-container
{
  margin-top: 50px;
  margin-left: 100px;
  margin-right: 100px;
}

.create-event-button
{
  background-color: rgb(27, 120, 133);
  color: black;
  width: 100px;
  height: 50px;
  text-align: center;
  margin-top: 50px;
  margin-bottom: 50px;
}

.create-event-text
{
  color: black;
}

.create-event-button:hover, .create-event-button:active
{
  background-color: #222222;
  color: white;
  cursor: pointer;
}

.filter-event-container
{
  right: 100px;
}

.filter-event-input
{
  background-color:  rgb(65, 9, 129);
  border: 0;
  width: 600px;
  height: 30px;
  font-size: 20px;
}

/* Popup für Details vom Event und Event hinzufügen */

.event-details-container, .create-event-container
{
  display: none;
  background-color:  rgba(65, 9, 129,0.9);
  color: white;
  position: absolute;
  margin-top: 80px;
  top: 50%;
  left: 50%;
  width: 500px;
  height: 500px;
  translate: -50% -50%;
  padding: 10px;
  border-width: 5px;
  border-color: rgb(27, 120, 133);
  border-style: solid;
}

.event-details-time
{
  padding-top: 20px;
  padding-left: 20px;
  font-size: 30px;
}

.event-details-title
{
  color: #fff;
  padding-top: 20px;
  padding-left: 20px;
  font-size: 80px;
}

.event-details-date
{
  color: aqua;
  padding-top: 20px;
  padding-left: 20px;
  font-size: 50px;
}

.event-details-cancel-button, .create-event-cancel-button
{
  font-size: 50px;
  position: absolute;
  top: 10px;
  right: 20px;
  text-align: center;
}

.event-details-book-button, .create-event-save-button
{
  background-color:rgb(27, 120, 133);
  color: #fff;
  text-align: center;
  position: absolute;
  bottom: 20px;
  right: 20px;
  width: 120px;
  height: 50px;
  font-size: 20px;
}

.event-details-cancel-button:hover, .event-details-book-button:hover, .create-event-save-button:hover, .create-event-cancel-button:hover
{
  cursor: pointer;
}

/* allgemein */

.button-text
{
  position: relative;
  top: 50%;
  translate: 0 -50%;
}

img
{
  width: 100%;
}
</style>

